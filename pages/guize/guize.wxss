

.banner image{ width:750rpx; height: 1080rpx; display: block;}
.out{ padding:70rpx 0; background: #1b366d;}
.out:nth-child(2n){ background: #fff;}
.out:nth-child(2n) .outConTxt .txt{ color:#333;}
.out:nth-child(2n) .outConTxt .txt .li::before{ background: #333;}
.outTit{ width:550rpx; height: 65rpx; background: #de2e05; border-radius: 65rpx; margin:0 auto; text-align: center; line-height: 65rpx; font-size: 34rpx; color:#fff; position: relative; margin-bottom: 50rpx;}
.outTit::after{ width:550rpx; height: 65rpx;border:2rpx dashed #de2e05; content: ""; display: block; border-radius: 65rpx; position: absolute; top:0; left: 0; box-sizing: border-box; 
transform: scale(1.02, 1.2)}

.outConIcon { display: flex; flex-wrap: wrap; justify-content: center;}
.outConIcon .item{ padding:0 20rpx 40rpx; color:#fff; text-align: center; font-size:26rpx;}
.outConIcon image{width:200rpx; height: 200rpx;}


.outConTxt .pic image{ width:750rpx; height: 447rpx;}
.outConTxt .txt{ color:#fff; font-size:28rpx;  display: flex; flex-wrap: wrap; padding-top:30rpx;}
.outConTxt .txt .li{ width:50%; padding:10rpx 30rpx; box-sizing: border-box; position: relative}
.outConTxt .txt .li::before{ content: ""; display: block; width:6rpx; height: 6rpx; background: #fff; border-radius: 6rpx; position: absolute; top:27rpx; left:15rpx;}







